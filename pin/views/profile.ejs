<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-700 text-white pt-1">
  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image" id="">
  </form>
  <div class="profdets flex flex-col items-center mt-20">
    <div class="relative">
      <span id="uploadicon"
        class="w-8 h-8 absolute cursor-pointer bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-100"
      >
        <i class="text-zinc-600 ri-pencil-fill"></i>
      </span>
      <div class="image w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
        <img
          class="h-full w-full object-cover"
          src="/images/uploads/<%= user.profileImage %>"
          alt="dp"
        />
      </div>
    </div>
    <h1 class="text-2xl font-semibold mt-5">Sai Charan</h1>
    <h3 class="text-md">@username</h3>
    <a
      href="/edit"
      class="mt-5 px-7 py-2 bg-zinc-400 rounded-full text-xs font-semibold"
      >Edit</a
    >
    <button class="px-10 py-2 mt-5 rounded-lg bg-red-700 font-semibold">
      Add New Task
    </button>
  </div>
  <div class="cards flex flex-wrap gap-10 px-10 mt-6">
    <div class="card">
      <div class="w-52 h-40 bg-zinc-300 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="https://i.pinimg.com/474x/da/cf/f3/dacff3c1be9dac2bf7138c88e9072fbd.jpg"
          alt=""
        />
      </div>
      <h3 class="text-xl font-semibold mt-3">All Pins</h3>
      <h5 class="text-sm font-medium opacity-70">Pins</h5>
    </div>
  </div>
</div>
<script>
    document.querySelector('#uploadicon').addEventListener('click',function(){
        document.querySelector('#uploadform input').click();
    })
    document.querySelector('#uploadform input').addEventListener('change',function(){
        document.querySelector('#uploadform').submit();
    })
</script>
<% include ./partials/footer.ejs %>
