<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="containerpers">
      <div class="cardpers">
        <div class="profile-picture">
          <img
            src="https://images.pexels.com/photos/4700590/pexels-photo-4700590.jpeg?auto=compress&cs=tinysrgb&w=600"
            alt="Profile Picture"
          />
        </div>
        <h2 class="name"><%= user.fullName %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline">
          Lorem ipsum dolor sit amet consectetur adipisicing.
        </p>
        <p class="description">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas,
          quasi!
        </p>
        <form
          class="upload"
          action="/upload"
          method="post"
          enctype="multipart/form-data"
        >
          <input
            type="text"
            name="filecaption"
            id=""
            placeholder="caption here"
          />
          <input type="file" name="file" id="" />
          <input class="submit" type="submit" value="Submit" />
        </form>
        <a href="/logout" class="button">Logout</a>
      </div>
    </div>

    <div class="container">
      <div class="cards">
        <% user.posts.forEach(function(post){ %>
        <div class="card" style="width: 18rem">
          <img
            src="/images/uploads/<%= post.image %>"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title"><%= post.imageText %></h5>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

