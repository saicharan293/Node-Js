<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form px-10 py-10">
            <form action="/create" method="post">
                <input class="block outline-none text-white w-full rounded-md px-5 py-2 bg-zinc-800 " type="text" name="title" placeholder="title goes here" id="">
                <textarea class="block outline-none text-white w-full rounded-md px-5 py-2 mt-2 bg-zinc-800 resize-none" name="details" placeholder="write your task details here. " id=""></textarea>
                <input type="submit" class="mt-2 cursor-pointer text-white bg-blue-600 px-5 py-2 rounded-md" value="Create Task">
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-3 ">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-2xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center mt-3">    
                            <a href="/file/<%= val %>" class="text-blue-500 inline-block ">Read More.</a>
                            <a href="/edit/<%= val %>" class="text-zinc-400">Edit file name</a>
                        </div>
                    </div>
                <%  }) %>
            <% } else { %>
                <h3 class="text-zinc-500 w-full text-center ">No Tasks yet</h3>
            <% } %>
            
        </div>

    </div>
</body>
</html>