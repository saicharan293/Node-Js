<% include ./partials/header.ejs %>

<div class="w-full bg-zinc-300 h-screen flex items-center justify-center">
  <div class="w-[30vw] bg-white px-10 py-10 rounded-[30px]">
    <h1 class="text-3xl mb-5 text-center tracking-tight capitalize leading-none font-semibold text-zinc-700">Create New Account</h1>
    <form action="/register" method="post">
      <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
      <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
      <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <input class="block cursor-pointer rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white " type="submit" value="Create New Account">
      <p class="text-center text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
    </form>
    <a href="/" class="inline-block mt-5 text-sm font-semibold text-zinc-700 w-full text-center">Login existing account.</a>
  </div>
</div>

<% include ./partials/footer.ejs %>