<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a New Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post">
        <input class="block w-1/3 px-3 py-2 mt-2" type="file" name="postImage" id="">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" name="title" id="" placeholder="Title">
        <textarea class="block w-1/3 h-50 px-3 py-2 border-2 rounded-md mt-2" type="text" name="description" id="" placeholder="Description"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-700 cursor-pointer font-semibold" type="submit" value="Create Post">
    </form>
</div>
