<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1574577457890-57d56460e04c?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8ODZ8fGFic3RyYWN0fGVufDB8fDB8fHww')] bg-center bg-cover flex items-center justify-center"
>
  <div class="w-[30vw] bg-white px-10 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center tracking-tight capitalize leading-none font-semibold text-zinc-700"
    >
      Welcome to pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#"
        >Forgot password. ?</a
      >
      <input
        class="block rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white cursor-pointer"
        type="submit"
        value="Login"
      />
      <p
        class="text-center text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a
      href="/register"
      class="inline-block mt-5 text-sm font-semibold text-zinc-700 w-full"
      >Don't have an account ?</a
    >
  </div>
</div>

